<UserControl x:Class="GAS.Views.EquipmentView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:GAS.ViewModels">
  <UserControl.DataContext>
    <vm:EquipmentViewModel/>
  </UserControl.DataContext>
  <Grid Margin="8">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal">
            <Button Content="Обновить" Margin="0,0,6,0" Command="{Binding ReloadCommand}"/>
            <Button Content="Добавить"  Margin="0,0,6,0" Command="{Binding AddCommand}"/>
            <Button Content="Изменить" Margin="0,0,6,0" Command="{Binding EditCommand}"/>
            <Button Content="Удалить"           Command="{Binding DeleteCommand}"/>
        </StackPanel>


        <DataGrid Grid.Row="1"
              ItemsSource="{Binding Items}"
              SelectedItem="{Binding Selected}"
              AutoGenerateColumns="False"
              IsReadOnly="True"
              Margin="0,8,0,0">
      <DataGrid.Columns>
        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="Auto"/>
        <DataGridTextColumn Header="Город" Binding="{Binding City}" Width="150"/>
        <DataGridTextColumn Header="Улица" Binding="{Binding Street}" Width="200"/>
        <DataGridTextColumn Header="Дом" Binding="{Binding House}" Width="80"/>
        <DataGridTextColumn Header="Антенна" Binding="{Binding Antenna}" Width="120"/>
        <DataGridTextColumn Header="ДРС" Binding="{Binding DRS}" Width="120"/>
        <DataGridCheckBoxColumn Header="Обслуж." Binding="{Binding Serviced}" Width="100"/>
        <DataGridTextColumn Header="Примечание" Binding="{Binding Note}" Width="*"/>
      </DataGrid.Columns>
    </DataGrid>
  </Grid>
</UserControl>

