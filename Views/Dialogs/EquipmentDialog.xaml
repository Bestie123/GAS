<Window x:Class="GAS.Views.Dialogs.EquipmentDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Оборудование" Height="520" Width="560" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
  <ScrollViewer Margin="12">
    <Grid>
      <Grid.RowDefinitions>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
      </Grid.RowDefinitions>

      <UniformGrid Columns="2" Rows="10" Margin="0,0,0,12">
        <Label Content="Город"/><TextBox Text="{Binding City}"/>
        <Label Content="Улица"/><TextBox Text="{Binding Street}"/>
        <Label Content="Дом"/><TextBox Text="{Binding House}"/>
        <Label Content="Индекс"/><TextBox Text="{Binding Index}"/>
        <Label Content="Корпус"/><TextBox Text="{Binding Corp}"/>
        <Label Content="Подъезд"/><TextBox Text="{Binding Entrance}"/>
        <Label Content="Антенна"/><TextBox Text="{Binding Antenna}"/>
        <Label Content="ДРС"/><TextBox Text="{Binding DRS}"/>
        <Label Content="Примечание"/><TextBox Text="{Binding Note}"/>
        <Label Content="Обслуживается"/><CheckBox IsChecked="{Binding Serviced}"/>
      </UniformGrid>

      <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
        <Button Content="ОК" Width="80" Margin="0,0,8,0" IsDefault="True" Click="Ok_Click"/>
        <Button Content="Отмена" Width="80" IsCancel="True"/>
      </StackPanel>
    </Grid>
  </ScrollViewer>
</Window>

