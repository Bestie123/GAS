<UserControl x:Class="GAS.Views.ClientsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:GAS.ViewModels">
  <UserControl.DataContext>
    <vm:ClientsViewModel/>
  </UserControl.DataContext>
  <Grid Margin="8">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>

    <StackPanel Orientation="Horizontal" Spacing="6">
      <TextBox Width="240" Text="{Binding SearchText}" />
      <Button Content="Поиск" Command="{Binding SearchCommand}"/>
      <Button Content="Обновить" Command="{Binding ReloadCommand}"/>
      <Button Content="Добавить" Command="{Binding AddCommand}"/>
      <Button Content="Изменить" Command="{Binding EditCommand}"/>
      <Button Content="Удалить" Command="{Binding DeleteCommand}"/>
    </StackPanel>

    <DataGrid Grid.Row="1"
              ItemsSource="{Binding Items}"
              SelectedItem="{Binding Selected}"
              AutoGenerateColumns="False"
              IsReadOnly="True"
              Margin="0,8,0,0">
      <DataGrid.Columns>
        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="Auto"/>
        <DataGridTextColumn Header="ФИО" Binding="{Binding FullName}" Width="*"/>
        <DataGridTextColumn Header="Телефон" Binding="{Binding Phone}" Width="200"/>
      </DataGrid.Columns>
    </DataGrid>
  </Grid>
</UserControl>

