<Window x:Class="GAS.Views.RegisterView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:GAS.ViewModels"
        Title="Регистрация" Height="360" Width="420" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
  <Window.DataContext>
    <vm:RegisterViewModel/>
  </Window.DataContext>
  <Grid Margin="16">
    <StackPanel>
      <TextBlock Text="Регистрация" FontSize="20" FontWeight="Bold" Margin="0,0,0,12"/>
      <Label Content="ФИО"/>
      <TextBox Text="{Binding FullName}" Margin="0,0,0,8"/>
      <Label Content="Логин"/>
      <TextBox Text="{Binding Login}" Margin="0,0,0,8"/>
      <Label Content="Пароль"/>
      <PasswordBox x:Name="Pwd" PasswordChanged="Pwd_OnPasswordChanged" Margin="0,0,0,8"/>
      <Label Content="Подтверждение пароля"/>
      <PasswordBox x:Name="Pwd2" PasswordChanged="Pwd2_OnPasswordChanged" Margin="0,0,0,12"/>
      <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
        <Button Content="Зарегистрироваться" Command="{Binding RegisterCommand}"/>
      </StackPanel>
    </StackPanel>
  </Grid>
</Window>

